{
  "name": "aircache",
  "version": "0.1.0",
  "description": "SQLite-based Airtable cache service with REST API",
  "author": "Guischk",
  "license": "MIT",
  "keywords": ["airtable", "cache", "sqlite", "api", "bun", "typescript"],
  "main": "index.ts",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "start": "bun index.ts",
    "dev": "bun --hot index.ts",
    "build": "bun run airtable:types && bun build index.ts --target=bun --outdir=dist",
    "build:railway": "bun install && bun run build",
    "test": "bun test tests/ --outdir dist",
    "test:api": "bun test tests/api.test.ts --outdir dist",
    "test:integration": "bun test tests/integration.test.ts --outdir dist",
    "test:security": "bun test tests/security.test.ts --outdir dist",
    "test:performance": "bun test tests/performance.test.ts --outdir dist",
    "test:all": "bun scripts/run-tests.ts",
    "test:complete": "bun run test:all",
    "test:unit": "bun test tests/api.test.ts tests/unit/",
    "test:e2e": "bun test tests/integration.test.ts tests/e2e/",
    "benchmark:sqlite-vs-airtable": "bun tests/sqlite-vs-airtable.benchmark.ts",
    "test:deployment": "bun scripts/test-sqlite-deployment.ts",
    "security-check": "bun scripts/security-check.ts",
    "demo": "bun scripts/demo.ts",
    "airtable:types": "airtable-types-gen --output src/lib/airtable/schema.ts -f",
    "clean": "rm -rf dist *.md *-report.md *-comparison.md",
    "test:watch": "bun test tests/ --watch",
    "test:coverage": "bun test tests/ --coverage",
    "test:ci": "bun run test:all -- --reporter=junit --outputFile=test-results.xml",
    "validate": "bun run test:complete && bun run security-check && echo 'âœ… Validation successful'",
    "prepublishOnly": "bun run test:complete && bun run security-check",
    "publish:check": "bun run validate"
  },
  "exports": {
    ".": "./index.ts",
    "./api": "./src/api/index.ts",
    "./server": "./src/server/index.ts",
    "./sqlite": "./src/lib/sqlite/index.ts"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "airtable": "^0.12.2",
    "airtable-types-gen": "^0.4.0"
  }
}
