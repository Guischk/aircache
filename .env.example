# Airtable Configuration
AIRTABLE_PERSONAL_TOKEN = your-personal-token
AIRTABLE_BASE_ID = base-id

# SQLite dual-database configuration (replaces Redis)
SQLITE_V1_PATH = data/aircache-v1.sqlite
SQLITE_V2_PATH = data/aircache-v2.sqlite
SQLITE_METADATA_PATH = data/metadata.sqlite
CACHE_TTL = 86400 # 24 hours
REFRESH_INTERVAL = 86400 # 24 hours (daily refresh)

# Storage configuration for attachments
STORAGE_PATH = ./data/attachments

# Bearer Token
BEARER_TOKEN = "dev-token"

# Port server
PORT = 3000