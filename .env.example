# Airtable Configuration
AIRTABLE_PERSONAL_TOKEN=your_airtable_personal_token_here
AIRTABLE_BASE_ID=your_airtable_base_id_here

# Bearer token configuration
# https://generate-random.org/api-token-generator?count=1&length=256&type=mixed-numbers-symbols&prefix=
BEARER_TOKEN=your_api_bearer_token_here

# Server Configuration
PORT=3000
REFRESH_INTERVAL=86400

# SQLite Database Paths
SQLITE_V1_PATH=data/aircache-v1.sqlite
SQLITE_V2_PATH=data/aircache-v2.sqlite
SQLITE_METADATA_PATH=data/metadata.sqlite
ENABLE_ATTACHMENT_DOWNLOAD=true

# Storage Configuration
STORAGE_PATH=./data/attachments

# Webhook Configuration
# Generate a secure secret: openssl rand -hex 32
WEBHOOK_SECRET=your_webhook_secret_min_32_chars_here
WEBHOOK_RATE_LIMIT=30
WEBHOOK_TIMESTAMP_WINDOW=300
WEBHOOK_IDEMPOTENCY_TTL=86400

# Webhook Auto-Setup (optional)
# Set to false to disable automatic webhook creation
WEBHOOK_AUTO_SETUP=true
# Your public Aircache URL (required for auto-setup)
# Example: https://aircache.yourcompany.com
WEBHOOK_PUBLIC_URL=

# Optional: API Configuration
API_DEFAULT_LIMIT=200

# Optional: Logging Configuration
CONSOLA_LEVEL=3      # 0=silent, 1=fatal, 2=error, 3=warn, 4=log, 5=info, 6=debug
CONSOLA_FANCY=true   # true for colored output, false for plain