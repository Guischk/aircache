# Server configuration
PORT=3000
NODE_ENV=production
SYNC_MODE=static  # Use "dynamic" to enable Airtable webhook flow

# Airtable configuration
AIRTABLE_PERSONAL_TOKEN=your_airtable_api_token_here
AIRTABLE_BASE_ID=your_airtable_base_id_here

# API authentication
BEARER_TOKEN=your_bearer_token_here

# Cache configuration (SQLite)
REFRESH_INTERVAL=86400  # 24 hours in seconds
WEBHOOK_DEBOUNCE_MS=5000

# Webhook configuration (required when SYNC_MODE=dynamic)
WEBHOOK_PUBLIC_URL=https://your-domain.example.com/api/webhooks/airtable

# Storage configuration
STORAGE_PATH=./data/attachments
ENABLE_ATTACHMENT_DOWNLOAD=true
